{
   "@namespaces":{
      "core":"core",
      "util":"contrib/utils"
   },
   "@aliases":{
      "ct":"core.Composite",
      "switch":"core.Switch",
      "iter":"core.Iteration",
      "cl":"util.CommandLine"
   },
   "@version":"1.0",
   "@params":{
      "PROJECT_NAME":"CODEGEN",
      "TEMPLATE_DIR":"../data/transform/",
      "SRC_DIR":"../data/transform/input/",
      "DEST_DIR":"../data/transform/output/"
   },
   "@initMode":"lazy",

   "default":{
      "@type":"core.Composite",
      "@description":"Generate Laravel Codes",
      "@params":{
         "PROJECT_NAME":"taskmator",
         "input":"taskmator"
      },
      "@haltOnError":false,
      "gen_db":{
         "@type":"text.Transform",
         "@params":{
            "author":"Young Suk Ahn"
         },
         "@template_dir":"${TEMPLATE_DIR}",
         "@templates": ["lara_db_createtable", "lara_db_seed"],
         "@src_dir":"${SRC_DIR}",
         "@dest_dir":"${DEST_DIR}",
         "@file_prefix":"db",
         "@file_ext":"php",
         "@haltOnError":true
      },
      "gen_model":{
         "@type":"text.Transform",
         "@params":{
            "author":"Young Suk Ahn"
         },
         "@template_dir":"${TEMPLATE_DIR}",
         "@templates": ["lara_model"],
         "@src_dir":"${SRC_DIR}",
         "@dest_dir":"${DEST_DIR}",
         "@file_prefix":"db",
         "@file_ext":"php",
         "@haltOnError":true
      },
      "gen_controller":{
         "@type":"text.Transform",
         "@params":{
            "author":"Young Suk Ahn"
         },
         "@template_dir":"${TEMPLATE_DIR}",
         "@templates": ["lara_controller"],
         "@src_dir":"${SRC_DIR}",
         "@dest_dir":"${DEST_DIR}",
         "@file_prefix":"db",
         "@file_ext":"php",
         "@haltOnError":true
      },
      "gen_views":{
         "@type":"text.Transform",
         "@params":{
            "author":"Young Suk Ahn"
         },
         "@template_dir":"${TEMPLATE_DIR}",
         "@templates": ["lara_view_index", "lara_view_edit"],
         "@src_dir":"${SRC_DIR}",
         "@dest_dir":"${DEST_DIR}",
         "@file_prefix":"db",
         "@file_ext":"php",

         "@haltOnError":true
      },
      "@execMode":"sequential",
      "@exec":[
         "gen_db", "gen_model", "gen_controller", "gen_views"
      ]
   }
}